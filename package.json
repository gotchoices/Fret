{
  "name": "fret-workspace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "cd packages/fret && yarn clean",
    "build": "cd packages/fret && yarn build",
    "build:parallel": "cd packages/fret && yarn build",
    "test": "cd packages/fret && yarn test",
    "format": "prettier --cache --log-level warn --write \"packages/fret/src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --cache --log-level warn --check \"packages/fret/src/**/*.{ts,tsx,js,jsx}\"",
    "pub": "yarn pub:fret",
    "pub:fret": "cd packages/fret && yarn clean && yarn build && npx bumpp --no-push --no-commit --no-tag --no-git-check -y && yarn npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "aegir": "^45.1.4",
    "prettier": "^3.6.2"
  }
}
